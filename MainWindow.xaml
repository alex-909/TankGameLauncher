<Window x:Class="TankGameLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TankGameLauncher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        Title="Launcher" Height="576" Width="1080">
    <Grid>
        <Image Stretch="UniformToFill" Source="D:\Projects\TankGameLauncher\images\LauncherBackground.jpg" HorizontalAlignment="Right"/>
        <TextBlock Name="VersionText" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
        <Button Name="PlayButton" Content="Checking for Updates" Click="PlayButton_Click" Height="60" FontSize="28" Margin="0,485,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="297" Background="#FFFFAF5F" FontWeight="ExtraLight"/>
    </Grid>
</Window>
